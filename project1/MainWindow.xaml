<Window x:Class="project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="530">
    <Grid Background="#FFFFEFC3">
        <Label x:Name="label" Content="Pizza Store" HorizontalAlignment="Left" Margin="82,0,0,0" VerticalAlignment="Top" FontFamily="Vivaldi" FontSize="72" Foreground="#FF34122C"/>
        <TextBox x:Name="nameTXT" HorizontalAlignment="Left" Height="80" Margin="146,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" FontSize="24"/>
        <Button x:Name="orderBtn" Content="Order" HorizontalAlignment="Left" Margin="146,251,0,0" VerticalAlignment="Top" Width="230" Foreground="#FF2E322C" Background="#FFFF9595" Height="58" Click="orderBtn_Click"/>
    </Grid>
</Window>
